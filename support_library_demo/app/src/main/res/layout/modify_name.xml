<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<android.support.v7.widget.Toolbar
		android:id="@+id/collectToolbar"
		android:layout_width="match_parent"
		android:layout_height="47dp"
		app:layout_scrollFlags="scroll|enterAlways">

		<RelativeLayout
			android:layout_height="match_parent"
			android:layout_width="match_parent">

			<TextView
				android:layout_width="wrap_content"
				android:text="收藏"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:textSize="23sp"
				android:layout_marginLeft="80dp"/>

			<RelativeLayout
				android:layout_height="60dp"
				android:layout_width="60dp"
				android:layout_alignParentRight="true"
				android:layout_alignParentBottom="true">

				<ImageView
					android:layout_height="28dp"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_width="21dp"
					android:id="@+id/activitymainTextView1"
					android:textSize="30sp"
					android:background="@drawable/message"
					android:layout_marginLeft="19dp"
					android:layout_marginTop="11dp"/>

				<TextView
					android:id="@+id/tTextView"
					android:background="@drawable/button_normal"
					android:layout_width="10dp"
					android:layout_alignParentRight="true"
					android:minWidth="10dp"
					android:gravity="center_vertical|center_horizontal"
					android:minHeight="10dp"
					android:layout_height="9dp"
					android:layout_marginTop="10dp"
					android:layout_marginRight="18dp"/>

			</RelativeLayout>

		</RelativeLayout>

	</android.support.v7.widget.Toolbar>

	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent">

		<View
			android:layout_height="5dp"
			android:layout_width="match_parent"
			android:background="@drawable/with_shadow"
			android:id="@+id/modifynameView1"/>

	</RelativeLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:layout_marginTop="20dp"
		android:layout_marginLeft="40dp">

		<TextView
			android:layout_height="wrap_content"
			android:text="夜愿"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="wrap_content"
			android:textColor="#88000000"
			android:id="@+id/modifynameTextView1"
			android:layout_marginBottom="5dp"/>

		<EditText
			android:layout_height="wrap_content"
			android:ems="10"
			android:layout_width="wrap_content"
			android:background="#00000000"
			android:layout_marginLeft="5dp"
			android:textColor="#88003A38"
			android:shadowColor="#D9B2B0"
			android:shadowRadius="1.0"
			android:typeface="monospace"/>

	</LinearLayout>

	<View
		android:layout_height="1dp"
		android:background="?android:attr/dividerVertical"
		android:layout_width="match_parent"/>

</LinearLayout>

