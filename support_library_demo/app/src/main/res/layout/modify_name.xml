<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:arc="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical">

	<android.support.v7.widget.Toolbar
		android:id="@+id/Modify_Toolbar"
		android:layout_width="match_parent"
		android:layout_height="47dp"
		app:layout_scrollFlags="scroll|enterAlways">

		<RelativeLayout
			android:background="#fafafb"
			android:layout_height="match_parent"
			android:layout_width="match_parent">

			<TextView
				android:layout_width="wrap_content"
				android:text="修改昵称"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:textSize="23sp"
				android:layout_marginLeft="80dp"/>



		</RelativeLayout>

	</android.support.v7.widget.Toolbar>

	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent">

		<View
			android:layout_height="5dp"
			android:layout_width="match_parent"
			android:background="@drawable/with_shadow"
			android:id="@+id/modifynameView1"/>

	</RelativeLayout>
	<RelativeLayout
		android:layout_width="match_parent"
		android:background="@android:color/white"
		android:layout_height="match_parent">

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:background="@android:color/white"

		android:paddingLeft="40dp">

		<TextView
			android:layout_height="wrap_content"
			android:text="夜愿"
			android:layout_marginTop="20dp"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="wrap_content"
			android:textColor="#88000000"
			android:id="@+id/modifynameTextView1"
			android:layout_marginBottom="5dp"/>

		<EditText
			android:layout_height="50dp"
			android:ems="10"
		android:layout_marginTop="20dp"
			android:layout_width="wrap_content"
			android:background="#00000000"
			android:layout_marginLeft="5dp"
			android:textColor="#88003A38"
			android:shadowColor="#D9B2B0"
			android:shadowRadius="1.0"
			android:id="@+id/Modify_e"
			android:typeface="monospace"/>

	</LinearLayout>
	</RelativeLayout>
	<View
		android:layout_height="1dp"
		android:background="?android:attr/dividerVertical"
		android:layout_width="match_parent"/>
	
</LinearLayout>

