<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_height="200dp">

	<RelativeLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:background="@drawable/qq"
		android:layout_margin="13dp"
		android:id="@+id/collectitemRelativeLayout2">

		<RelativeLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:layout_alignParentBottom="true"
			android:id="@+id/recycarditemRelativeLayout1"
			android:background="#99000000">

			<TextView
				android:layout_height="wrap_content"
				android:text="9000人送款"
				android:id="@+id/recy_card_itemTextView"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="wrap_content"
				android:textColor="#FFFFFF"
				android:textSize="15sp"
				android:layout_marginLeft="20dp"
				android:layout_marginBottom="2dp"
				android:layout_marginTop="2dp"/>

		</RelativeLayout>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_above="@id/recycarditemRelativeLayout1"
			android:id="@+id/paiditemTextView1"
			android:layout_marginLeft="12dp"
			android:textColor="#FFFFFF"
			android:textSize="23sp"
			android:text="周杰伦教一招"/>

		<RelativeLayout
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:background="#55000000"
			android:id="@+id/collectitemRelativeLayout1">

			<Button
				android:layout_height="wrap_content"
				android:text="支付1亿"
				android:layout_width="wrap_content"
				android:layout_centerInParent="true"
				android:id="@+id/collect_paid_button"
				android:paddingLeft="25dp"
				android:paddingRight="25dp"/>

		</RelativeLayout>

	</RelativeLayout>

	<TextView
		android:layout_height="13dp"
		android:id="@+id/tTextView"
		android:background="@drawable/button_normal"
		android:layout_width="13dp"
		android:layout_alignParentRight="true"
		android:minWidth="15dp"
		android:gravity="center_vertical|center_horizontal"
		android:minHeight="15dp"
		android:layout_marginRight="5dp"
		android:layout_marginTop="4dp"/>

</RelativeLayout>

