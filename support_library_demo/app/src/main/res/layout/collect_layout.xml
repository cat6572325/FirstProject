<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/drawer_layout"
	android:orientation="vertical">
	<android.support.v7.widget.RecyclerView

		android:layout_height="wrap_content"
		android:layout_width="wrap_content"

		android:divider="@drawable/listview_line"
		android:dividerHeight="1dp"
		android:id="@+id/collectrv"/>
<android.support.v7.widget.Toolbar
	android:layout_width="wrap_content"
	android:id="@+id/paidToolbar"
	android:background="#fafafb"
	android:layout_height="?attr/actionBarSize">
	<RelativeLayout
			android:layout_height="50dp"
			android:id="@+id/one"
		android:background="#fafafb"
			android:layout_width="match_parent">

			<TextView
				android:layout_width="wrap_content"
				android:text="收藏"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:textSize="23sp"
				android:layout_centerHorizontal="true"/>

			<RelativeLayout
				android:layout_height="60dp"
				android:layout_width="60dp"
				android:layout_alignParentRight="true"
				android:layout_alignParentBottom="true">

				<ImageView
					android:layout_height="28dp"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_width="21dp"
					android:id="@+id/activitymainTextView1"
					android:textSize="30sp"
					android:background="@drawable/message"
					android:layout_marginLeft="19dp"
					android:layout_marginTop="11dp"/>

				<TextView
					android:id="@+id/tTextView"
					android:background="@drawable/button_normal"
					android:layout_width="wrap_content"
					android:layout_alignParentRight="true"
					android:minWidth="10dp"
					android:text="9"
					android:textSize="10dp"
					android:textColor="@android:color/white"
					android:gravity="center_vertical|center_horizontal"
					android:minHeight="10dp"
					android:layout_height="wrap_content"
					android:layout_marginTop="8dp"
					android:layout_marginRight="15dp"/>
			</RelativeLayout>

		</RelativeLayout>

</android.support.v7.widget.Toolbar>
	<RelativeLayout
		android:layout_height="wrap_content"
		android:id="@+id/views"
		android:layout_below="@id/paidToolbar"
		android:background="#00000000"
		android:layout_width="match_parent">

		<ImageView
			android:layout_height="5dp"
			android:layout_width="match_parent"
			android:paddingBottom="10dp"
			android:id="@+id/videodataeditlayoutImageView1"
			android:background="@drawable/down_shadow"/>

	</RelativeLayout>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/collect_layoutTextView"
			android:layout_centerVertical="true"/>




</RelativeLayout>

