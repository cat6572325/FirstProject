<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:orientation="vertical">
    <LinearLayout
        android:clickable="false"
        android:layout_height="match_parent"
        android:layout_width="260dp"

        android:layout_gravity="left"
        android:background="#e5f5f5"
        android:orientation="vertical"
        android:id="@+id/activitymainLinearLayout1">

        <RelativeLayout
            android:layout_height="200dp"
            android:layout_width="match_parent">
<LinearLayout
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:id="@+id/image_layout"
    android:gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_centerVertical="true"
    android:background="@drawable/avatar"
    >
            <com.yanbober.support_library_demo.XCRoundImageView
                android:layout_width="65dp"
                android:id="@+id/drawer_headerImageView"
                android:layout_height="65dp"
                />
</LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/image_layout"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/User_name"
                    android:text="----------------------------------------------------"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxWidth="100dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="\qq.com"
                    android:ellipsize="end"
                    android:maxWidth="100dp"
                    android:singleLine="true" />


            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
               >

                <ListView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:id="@+id/tRecyclerView1"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:id="@+id/tLinearLayout1"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:layout_height="23dp"
                    android:layout_width="23dp"
                    android:minHeight="23dp"
                    android:id="@+id/left_list_itemImageView"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/login_up"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:text="退出登陆"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_width="wrap_content"
                    android:id="@+id/leftlistitemTextView1"
                    android:layout_marginTop="9dp"
                    android:textSize="17sp"
                    android:textColor="#757575"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>