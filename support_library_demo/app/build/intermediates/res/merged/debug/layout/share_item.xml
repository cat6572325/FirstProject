<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	
	android:layout_marginLeft="10dp"
	android:layout_marginRight="10dp"
	android:layout_marginTop="5dp">
	
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content">

		<RelativeLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content">

			<ImageView
				android:layout_height="50dp"
				android:text="我是头像"
				android:layout_width="50dp"
				android:id="@+id/shareitemButton1"
				android:layout_centerInParent="true"
				android:background="@drawable/icon_people"/>

			<View
				android:layout_height="30dp"
				android:background="?android:attr/dividerHorizontal"
				android:layout_width="1dp"
				android:layout_toRightOf="@id/shareitemButton1"
				android:layout_marginLeft="8dp"
				android:layout_centerVertical="true"/>

		</RelativeLayout>

		<RelativeLayout
			android:layout_height="wrap_content"
			android:layout_width="220dp"
			android:layout_marginLeft="10dp">

			<TextView
				android:layout_height="30dp"
				android:text="名字"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="190dp"
				android:id="@+id/shareitemTextView1"
				android:padding="5dp"
				android:layout_marginTop="5dp"/>

			<TextView
				android:layout_height="30dp"
				android:text="我要冲向宇宙"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="190dp"
				android:layout_below="@id/shareitemTextView1"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:id="@+id/share_itemTextView"
				android:textColor="#D3D3D3"/>

		</RelativeLayout>

		<RelativeLayout
			android:layout_height="60dp"
			android:layout_width="60dp">

			<TextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="wrap_content"
				android:layout_centerInParent="true"
				android:id="@+id/shareitemTextView2"/>

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_above="@id/shareitemTextView2"
				android:background="#E82014"/>

		</RelativeLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="vertical">
		<View
			android:layout_height="1dp"
			android:background="?android:attr/dividerVertical"
			android:layout_width="match_parent"/>
		
		<TextView
			android:layout_height="100dp"
			android:layout_width="250dp"
			android:text="没有太多点子，或者是觉得麻烦，希望能再多些好功能，布局也是要更好才行"
			android:maxHeight="100dp"
			android:id="@+id/share_itemTextViewData"
			android:layout_marginTop="10dp"
			android:layout_marginLeft="55dp"/>

		<ImageView
			android:layout_height="30dp"
			android:layout_width="30dp"
			android:background="@android:drawable/stat_notify_chat"
			android:layout_marginTop="10dp"
			android:layout_marginLeft="55dp"/>

		<View
			android:layout_height="3dp"
			android:background="?android:attr/dividerVertical"
			android:layout_width="match_parent"
			android:layout_marginTop="15dp"/>

		
	</LinearLayout>
	</LinearLayout>

