<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <Button
            android:layout_height="20dp"
            android:layout_width="23dp"
            android:id="@+id/Register_back"
            android:layout_margin="24dp"
            android:background="@drawable/back_purple"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="注册"
            android:textSize="22sp"
            android:layout_margin="20dp"/>

        <RelativeLayout
            android:layout_height="130dp"
            android:layout_width="264dp"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_height="130dp"
                android:layout_width="240dp"
                android:orientation="vertical"
                android:background="@drawable/login_background_style">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1.0">

                    <ImageView
                        android:layout_height="35dp"
                        android:layout_width="20dp"
                        android:background="@drawable/phone_number"
                        android:layout_margin="15dp"/>

                    <EditText
                        android:layout_height="match_parent"
                        android:ems="20"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:hint="enter your phone number"
                        android:maxHeight="60dp"
                        android:background="#00000000"/>

                </LinearLayout>

                <View
                    android:layout_height="1dp"
                    android:background="?android:attr/dividerVertical"
                    android:layout_width="match_parent"/>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1.0">

                    <ImageView
                        android:layout_height="35dp"
                        android:layout_width="20dp"
                        android:background="@drawable/modify_password_icon"
                        android:layout_margin="15dp"/>

                    <EditText
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:maxHeight="60dp"
                        android:hint="enter your password"
                        android:background="#00000000"/>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:id="@+id/Register_Button"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/loginin"/>

        </RelativeLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_centerHorizontal="true"
    android:text="注册即同意 181s注册条款"
    android:layout_alignParentBottom="true"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp" />
    </RelativeLayout>

</LinearLayout>

