<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/login"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/logindialogLinearLayout1"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="vertical">

		<android.support.design.widget.TextInputLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:counterEnabled="true"
			app:counterMaxLength="11"
			app:hintAnimationEnabled="true"
			app:counterOverflowTextAppearance="@android:style/TextAppearance.DeviceDefault.Large"
			android:id="@+id/logindialogTextInputLayout1"
			android:layout_centerInParent="true"
			android:layout_marginLeft="50dp">

			<EditText
				android:id="@+id/regE"
				android:background="@drawable/login"
				style="?android:attr/textViewStyle"
				android:layout_width="200dp"
				android:layout_height="45dp"
				android:layout_above="@+id/pasE"
				android:layout_alignLeft="@id/pasE"
				android:layout_alignTop="@+id/id_reg"
				android:layout_marginRight="5dp"
				android:layout_toRightOf="@id/id_reg"
				android:textColor="#00ff00"
				android:hint="输入手机号"
				android:inputType="number|textShortMessage"/>

		</android.support.design.widget.TextInputLayout>

		<View
			android:layout_height="3dp"
			android:id="@+id/login_dialogView"
			android:layout_below="@id/logindialogTextInputLayout1"
			android:background="?android:attr/dividerVertical"
			android:layout_width="200dp"
			android:layout_centerInParent="true"
			android:layout_marginLeft="50dp"/>

		<android.support.design.widget.TextInputLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:counterEnabled="true"
			app:counterMaxLength="11"
			android:layout_below="@id/login_dialogView"
			app:hintAnimationEnabled="true"
			app:counterOverflowTextAppearance="@android:style/TextAppearance.DeviceDefault.Large"
			android:id="@+id/logindialogTextInputLayout2"
			android:layout_centerInParent="true"
			android:layout_marginLeft="50dp">

			<EditText
				android:id="@+id/pasE"
				style="?android:attr/textViewStyle"
				android:layout_width="200dp"
				android:layout_height="45dp"
				android:layout_alignBottom="@+id/id_pas"
				android:layout_alignTop="@+id/id_pas"
				android:layout_marginRight="5dp"
				android:layout_toRightOf="@id/id_pas"
				android:background="@drawable/login"
				android:textColor="#00ff00"
				android:inputType="textPassword"/>

		</android.support.design.widget.TextInputLayout>

	</LinearLayout>

	<Button
		android:layout_width="match_parent"
		android:id="@+id/btn_login"
		android:layout_height="44dp"
		android:layout_below="@id/logindialogLinearLayout1"
		android:layout_marginTop="15dp"
		android:text="Login"
		android:textColor="#727272"/>

	<Button
		android:layout_width="match_parent"
		android:id="@+id/btn_register"
		android:layout_height="44dp"
		android:layout_below="@id/btn_login"
		android:layout_marginTop="15dp"
		android:text="Register"
		android:textColor="#727272"/>

</RelativeLayout>

