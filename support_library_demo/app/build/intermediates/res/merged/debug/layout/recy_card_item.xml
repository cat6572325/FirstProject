<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_height="200dp">
	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:cardBackgroundColor="#ffffff"
		app:cardCornerRadius="2dp"
		app:cardElevation="2dp"
		android:layout_marginRight="6dp"
		android:layout_marginLeft="6dp"
		android:layout_marginTop="6dp"
		android:layout_centerHorizontal="true"
		android:id="@+id/myvideotabsalrvcarditemCardView1">
		
	<RelativeLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:id="@+id/Video_item_Relativelayout"
		android:background="@drawable/ic_launcher"

		>
		<RelativeLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:layout_alignParentBottom="true"
			android:id="@+id/recycarditemRelativeLayout1"
			android:background="#99000000">

			<TextView
				android:layout_height="wrap_content"
				android:text="9000人送款"
				android:id="@+id/recy_card_itemTextView"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="wrap_content"
				android:textColor="#FFFFFF"
				android:textSize="15sp"
				android:layout_marginLeft="20dp"
				android:layout_marginBottom="2dp"
				android:layout_marginTop="2dp"/>

		</RelativeLayout>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="我的视频"
			android:layout_marginLeft="10dp"
			android:textSize="20dp"
			android:id="@+id/recy_card_Title"
			android:layout_above="@id/recycarditemRelativeLayout1"
			 />

	</RelativeLayout>
	</android.support.v7.widget.CardView>
	
	<TextView
		android:layout_height="13dp"
		android:id="@+id/tTextView"
		android:background="@drawable/button_normal"
		android:layout_width="13dp"
		android:layout_alignParentRight="true"
		android:minWidth="15dp"
		android:gravity="center_vertical|center_horizontal"
		android:minHeight="15dp"
		android:layout_marginRight="3dp"
		android:layout_marginTop="3dp"/>
	</RelativeLayout>

