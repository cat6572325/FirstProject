<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/drawer_layout"
	android:orientation="vertical">

	<android.support.design.widget.CoordinatorLayout
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:id="@+id/main_content"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<android.support.design.widget.AppBarLayout
			android:id="@+id/app_bar_layout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			
	<android.support.v7.widget.Toolbar
		android:id="@+id/myvideotoolbar"
		android:layout_width="match_parent"
		android:layout_height="47dp"
		app:layout_scrollFlags="scroll|enterAlways">

		<RelativeLayout
			android:layout_height="match_parent"
			android:layout_width="match_parent">

			<TextView
				android:layout_width="wrap_content"
				android:text="我的视频"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:textSize="23sp"
				android:layout_marginLeft="80dp"/>

			<RelativeLayout
				android:layout_height="60dp"
				android:layout_width="60dp"
				android:layout_alignParentRight="true"
				android:layout_alignParentBottom="true">

				<ImageView
					android:layout_height="28dp"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_width="21dp"
					android:id="@+id/activitymainTextView1"
					android:textSize="30sp"
					android:background="@drawable/message"
					android:layout_marginLeft="19dp"
					android:layout_marginTop="11dp"/>

				<TextView
					android:id="@+id/tTextView"
					android:background="@drawable/button_normal"
					android:layout_width="wrap_content"
					android:layout_alignParentRight="true"
					android:minWidth="10dp"
					android:text="1"
					android:textSize="4dp"
					android:textColor="@android:color/white"
					android:gravity="center_vertical|center_horizontal"
					android:minHeight="10dp"
					android:layout_height="9dp"
					android:layout_marginTop="11dp"
					android:layout_marginRight="18dp"/>

			</RelativeLayout>

		</RelativeLayout>

	</android.support.v7.widget.Toolbar>
	
			<android.support.design.widget.TabLayout
				android:id="@+id/myvideotab"
				android:layout_width="match_parent"
				android:layout_height="55dp"
				app:tabTextColor="#cccccc"
				app:tabIndicatorColor="#663488"
				app:tabSelectedTextColor="#aaaaaa"
				app:tabTextAppearance="@style/tabfont"/>
			<RelativeLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent">

				<View
					android:layout_height="5dp"
					android:layout_width="match_parent"
					android:background="@drawable/with_shadow"
					android:id="@+id/modifynameView1"/>

			</RelativeLayout>

		</android.support.design.widget.AppBarLayout>

		<android.support.v4.view.ViewPager
			android:id="@+id/view_pager"
			app:layout_behavior="@string/appbar_scrolling_view_behavior"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>

	</android.support.design.widget.CoordinatorLayout>
	
	

</android.support.v4.widget.DrawerLayout>

