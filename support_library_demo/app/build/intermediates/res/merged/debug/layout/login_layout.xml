<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_height="match_parent"

        android:layout_width="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/login_title"
    android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="登陆"
            android:textSize="22sp"

            android:layout_margin="20dp"/>
</RelativeLayout>
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/uknow"
            android:layout_below="@id/login_title"

            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_height="130dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:id="@+id/login_edit_layout"
                android:background="@drawable/login_background_style">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1.0">

                    <ImageView
                        android:layout_height="35dp"
                        android:layout_width="20dp"
                        android:background="@drawable/phone_number"
                        android:layout_margin="15dp"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:id="@+id/login_phone1"
                        android:layout_height="wrap_content">
                        <EditText
                        android:layout_height="match_parent"
                        android:ems="20"
                            android:id="@+id/login_phone"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:hint="enter your phone number"
                        android:maxHeight="60dp"
                            android:inputType="number|textShortMessage"
                        android:background="#00000000"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

                <View
                    android:layout_height="3dp"
                    android:background="?android:attr/dividerVertical"
                    android:layout_width="match_parent"/>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1.0">

                    <ImageView
                        android:layout_height="35dp"
                        android:layout_width="20dp"
                        android:background="@drawable/modify_password_icon"
                        android:layout_margin="15dp"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:id="@+id/login_pass1"
                        android:layout_height="wrap_content">
                    <EditText
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:id="@+id/login_pass"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:maxHeight="60dp"
                        android:hint="enter your password"
                        android:inputType="textPassword"
                        android:background="#00000000"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:id="@+id/Register_Button"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/loginin"/>


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
        android:layout_below="@id/uknow"
            android:id="@+id/uknow1"
        android:layout_height="wrap_content"
            android:layout_marginTop="70dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:background="@android:color/darker_gray"
            />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wechat_login" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:layout_margin="20dp"
                android:background="@android:color/darker_gray"
                />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/uknow1"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp">
<Button
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:text="手机注册"
    android:id="@+id/Login_Regi_Button"
    />
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/Login_findPassword_Button"
    android:text="找回密码"
    />
            </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="注册即同意 181s注册条款"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />
    </RelativeLayout>

</LinearLayout>

